<div class="form">

<% if @owner.errors.any? %>
	<% @owner.errors.full_messages.each do |err| %>
		<p><%= err %></p>
	<% end %>
<% end %>

<%= form_for @owner do |f| %>
	<p>
		<%= f.label :firstname %>
		<%= f.text_field :firstname %>
	</p>

	<p>
		<%= f.label :lastname %>
		<%= f.text_field :lastname %>
	</p>

	<p>
		<%= f.label :contact %>
		<%= f.telephone_field :contact %>
	</p>

	<p>
		<%= f.label :email %>
		<%= f.email_field :email %>
	</p>

	<p>
		<%= f.label :image %>
		<%= f.url_field :image %>
	</p>
   	
   	<p>
     <%= f.label :password %>
     <%= f.password_field :password %>
   	</p>
   
   	<p>
     <%= f.label :pasword_confirmation %>
     <%= f.password_field :password_confirmation %>
   	</p>
	
	<%= f.submit %>

<% end %>

</div>